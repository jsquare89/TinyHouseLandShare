@model IEnumerable<SeekerListing>
@{
    ViewData["Title"] = "Seeker Listings";
}

<div class="">
    <h1 class="text-center text-xl font-semibold">Seeker Listings - Lists Seeker Listings in USA & Canada</h1>

    <div class="flex flex-row flex-wrap">
    @foreach(var listing in Model)
    {
        <div class="flex flex-row w-full md:w-1/2 xl:w-1/3">
            <!-- Listing Card -->
            <div class="flex flex-col m-2 w-full bg-white hover:duration-300 shadow-md hover:shadow-xl ">
                <a asp-controller="seeker" asp-action="listing" asp-route-id="@listing.Id" class="flex flex-col p-4 grow">
                    <img src="~/img/placeholder-image.png" title="seeker main image" class="bg-white mx-auto mb-4 rounded-sm border border-gray-200 " />
                    <h1 class="text-l text-center line-clamp-2">@listing.Title.FirstCharToUpper()</h1>
                    <p class="text-md text-center">@listing.Id</p>
                    <p class="text-base font-light mb-2 mr-2 text-center">@listing.Location, @listing.State, @listing.Country</p>
                    <div class="grow"></div>
                    <div class="flex flex-row text-black justify-between items-end">
                        <span class="text-base font-light">@listing.CreatedTime.Date.ToString("MMM dd")</span>
                    </div>
                        
                    <p>House Size: @listing.HouseSize</p>
                </a>
            </div>
        </div>
    }

    </div>
</div>
