@model IEnumerable<LandListingViewModel>
@{
    ViewData["Title"] = "Land Listings";
}

<div class="">
    <h1 class="text-center text-xl font-semibold">Land Listings - Lists Land Listings in USA & Canada</h1>

    <div class="flex flex-row flex-wrap">
        @foreach(var listing in Model)
        {
            <div class="flex flex-row w-full md:w-1/2 xl:w-1/3">
                <!-- Listing Card -->
                    <div class="flex flex-col m-2 w-full bg-white hover:duration-300 shadow-md hover:shadow-xl ">
                        <a asp-controller="land" asp-action="listing" asp-route-id="@listing.Id" class="flex flex-col p-4 grow">
                        <div class="absolute border border-gray-200 px-3 py-2 font-semibold bg-white">$@listing.Price.ToString("N0")</div>
                       
                        @if (listing.ImageSrc is not null)
                        {
                            <img src="@listing.ImageSrc" class="bg-white mx-auto mb-4 rounded-sm border border-gray-200 " title="land main image" />

                        }
                        else
                        {
                            <img src="~/img/placeholder-image.png" class="bg-white mx-auto mb-4 rounded-sm border border-gray-200 " title="land main image" />
                        }

                        @*<img src="img/placeholder-image.png" title="lang listing main image" class="bg-white mx-auto mb-4 rounded-sm border border-gray-200 "/>*@
                        <h1 class="text-l text-center line-clamp-2">@listing.Title </h1>
                        <p class="text-base font-light mb-2 mr-2 text-center">@listing.Location, @listing.State, @listing.Country</p>
                        <div class="grow"></div>
                        <div class="flex flex-row text-black justify-between items-end">
                            <span class="text-base font-light">@listing.CreatedTime.Date.ToString("MMM dd")</span>
                            <div class="flex flex-row">
                                @if(listing.WaterConnection)
                                {
                                    <div class="relative flex flex-col items-center group w-8 h-8 border border-gray-200 bg-green-200 rounded-sm">
                                        <div class="tooltip">
                                            <span class="tooltip-top">Water</span>
                                            <div class="w-3 h-3 -mt-2 rotate-45 bg-black"></div>
                                        </div>
                                        <i class="fa-solid fa-droplet my-auto"></i>
                                    </div>
                                }
                                @if(listing.ElectricalConnection)
                                {
                                    <div class="relative flex flex-col items-center group w-8 h-8 border border-green-200 bg-green-200 rounded-sm">
                                        <div class="tooltip">
                                            <span class="tooltip-top">Electricity</span>
                                            <div class="w-3 h-3 -mt-2 rotate-45 bg-black"></div>
                                        </div>
                                        <i class="fa-solid fa-plug-circle-bolt my-auto"></i>
                                    </div>
                                }
                                @if(listing.WifiConnection)
                                {
                                    <div class="relative flex flex-col items-center group w-8 h-8 border border-gray-200 bg-green-200 rounded-sm">
                                        <div class="tooltip">
                                            <span class="tooltip-top">Internet/Wifi</span>
                                            <div class="w-3 h-3 -mt-2 rotate-45 bg-black"></div>
                                        </div>
                                        <i class="fa-solid fa-wifi my-auto"></i>
                                    </div>
                                }
                                @if(listing.PetFriendly)
                                {
                                    <div class="relative flex flex-col items-center group w-8 h-8 border border-gray-200 bg-green-200 rounded-sm">
                                        <div class="tooltip">
                                            <span class="tooltip-top">Pets Allowed</span>
                                            <div class="w-3 h-3 -mt-2 rotate-45 bg-black"></div>
                                        </div>
                                        <i class="fa-solid fa-shield-dog my-auto"></i>
                                    </div>
                                }
                                @if(listing.ChildFriendly)
                                {
                                    <div class="relative flex flex-col items-center group w-8 h-8 border border-gray-200 bg-green-200 rounded-sm">
                                        <div class="tooltip">
                                            <span class="tooltip-top">Child Friendly</span>
                                            <div class="w-3 h-3 -mt-2 rotate-45 bg-black"></div>
                                        </div>
                                        <i class="fa-solid fa-children my-auto"></i>
                                    </div>
                                }
                                @if(listing.NoSmoking)
                                {
                                    <div class="relative flex flex-col items-center group w-8 h-8 border border-gray-200 bg-red-300 rounded-sm">
                                        <div class="tooltip">
                                            <span class="tooltip-top">No Smoking</span>
                                            <div class="w-3 h-3 -mt-2 rotate-45 bg-black"></div>
                                        </div>
                                        <i class="fa-solid fa-ban-smoking my-auto"></i>
                                    </div>
                                }
                               
                            </div>
                        </div>
                </a>
                    </div>
            </div>
        }
    </div>
</div>


