@model IEnumerable<LandListing>
@{
    ViewData["Title"] = "Land Listings";
}

<div class="p-6">
    <h1 class="">Land Listings</h1>
    <p class="pb-4">See all land listings in North America.</p>

    <div class="flex flex-row flex-wrap justify-center">
        @foreach(var listing in Model)
        {
            <!-- Listing Card -->
            <a asp-controller="land" asp-action="listing" asp-route-id="@listing.Id">
                <div class="flex flex-col align-center m-4 p-6 max-w-md hover:duration-300 shadow-md hover:shadow-xl hover:bg-green-50 ">
                    <img src="img/placeholder-image.png" title="seeker main image" class="mx-auto mb-6 rounded-sm border border-gray-200 "/>
                    <h1 class="text-xl">@listing.Title</h1>
                    <p>@listing.Location</p>
                    <p>Post created on: @listing.CreatedTime.Date</p>
                    <p>Date Available: @listing.AvailableDate</p>
                    <p>House Size: @listing.LotSize</p>
                    <p>Foundation Size: @listing.FoundationSize</p>
                    <div class="flex flex-row text-black">
                        <div class="relative flex flex-col items-center group py-1.5 px-2 border border-slate-200 bg-green-500 rounded-sm">
                            <div class="tooltip">
                                <span class="tooltip-top">Water</span>
                                <div class="w-3 h-3 -mt-2 rotate-45 bg-black"></div>
                            </div>
                            <i class="fa-solid fa-droplet my-auto py-1"></i>
                        </div>
                        <div class="relative flex flex-col items-center group py-1.5 px-2 border border-slate-200 bg-green-500 rounded-sm">
                            <div class="tooltip">
                                <span class="tooltip-top">Electricity</span>
                                <div class="w-3 h-3 -mt-2 rotate-45 bg-black"></div>
                            </div>
                            <i class="fa-solid fa-plug-circle-bolt my-auto py-1"></i>
                        </div>
                        <div class="relative flex flex-col items-center group py-1.5 px-2 border border-slate-200 bg-green-500 rounded-sm">
                            <div class="tooltip">
                                <span class="tooltip-top">Internet/Wifi</span>
                                <div class="w-3 h-3 -mt-2 rotate-45 bg-black"></div>
                            </div>
                            <i class="fa-solid fa-wifi my-auto py-1"></i>
                        </div>
                        <div class="relative flex flex-col items-center group py-1.5 px-2 border border-slate-200 bg-green-500 rounded-sm">
                            <div class="tooltip">
                                <span class="tooltip-top">Pets Allowed</span>
                                <div class="w-3 h-3 -mt-2 rotate-45 bg-black"></div>
                            </div>
                            <i class="fa-solid fa-shield-dog my-auto py-1"></i>
                        </div>
                        <div class="relative flex flex-col items-center group py-1.5 px-2 border border-slate-200 bg-green-500 rounded-sm">
                            <div class="tooltip">
                                <span class="tooltip-top">Children Friendly</span>
                                <div class="w-3 h-3 -mt-2 rotate-45 bg-black"></div>
                            </div>
                            <i class="fa-solid fa-children my-auto py-1"></i>
                        </div>
                    </div>
                </div>
            </a>
        }
    </div>
</div>


