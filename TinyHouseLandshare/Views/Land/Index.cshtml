@model IEnumerable<LandListing>
@{
    ViewData["Title"] = "Land Listings";
}

<div class="">
    <h1 class="text-center text-xl font-semibold">Land Listings</h1>
    <p class="text-center pb-4">See all land listings in North America.</p>

    <div class="flex flex-row flex-wrap justify-center">
        @foreach(var listing in Model)
        {
            <!-- Listing Card -->
            <a asp-controller="land" asp-action="listing" asp-route-id="@listing.Id">
                
                <div class="flex flex-col align-center m-4 p-6 max-w-md hover:duration-300 shadow-md hover:shadow-xl ">
                    <div class="absolute border border-gray-200 px-3 py-2 font-semibold bg-white">$@listing.Price.ToString("N0") / @listing.PayPeriod</div>
                    <img src="img/placeholder-image.png" title="seeker main image" class="bg-white mx-auto mb-4 rounded-sm border border-gray-200 "/>
                    <h1 class="text-l text-center line-clamp-2">@listing.Title </h1>
                    <span class="text-base font-light mb-2 mr-2 text-center">@listing.Location, @listing.State, @listing.Country</span>

                    <div class="flex flex-row text-black justify-between items-end">
                        <span class="text-base font-light">Listed: @listing.CreatedTime.Date.ToString("MMM dd")</span>
                        <div class="flex flex-row">
                            <div class="relative flex flex-col items-center group w-8 h-8 border border-gray-200 bg-green-200 rounded-sm">
                                <div class="tooltip">
                                    <span class="tooltip-top">Water</span>
                                    <div class="w-3 h-3 -mt-2 rotate-45 bg-black"></div>
                                </div>
                                <i class="fa-solid fa-droplet my-auto"></i>
                            </div>
                            <div class="relative flex flex-col items-center group w-8 h-8 border border-gray-200 bg-green-200 rounded-sm">
                                <div class="tooltip">
                                    <span class="tooltip-top">Electricity</span>
                                    <div class="w-3 h-3 -mt-2 rotate-45 bg-black"></div>
                                </div>
                                <i class="fa-solid fa-plug-circle-bolt my-auto"></i>
                            </div>
                            <div class="relative flex flex-col items-center group w-8 h-8 border border-gray-200 bg-green-200 rounded-sm">
                                <div class="tooltip">
                                    <span class="tooltip-top">Internet/Wifi</span>
                                    <div class="w-3 h-3 -mt-2 rotate-45 bg-black"></div>
                                </div>
                                <i class="fa-solid fa-wifi my-auto"></i>
                            </div>
                            <div class="relative flex flex-col items-center group w-8 h-8 border border-gray-200 bg-gray-100 rounded-sm">
                                <div class="tooltip">
                                    <span class="tooltip-top">Pets Allowed</span>
                                    <div class="w-3 h-3 -mt-2 rotate-45 bg-black"></div>
                                </div>
                                <i class="fa-solid fa-shield-dog my-auto"></i>
                            </div>
                            <div class="relative flex flex-col items-center group w-8 h-8 border border-gray-200 bg-green-200 rounded-sm">
                                <div class="tooltip">
                                    <span class="tooltip-top">Child Friendly</span>
                                    <div class="w-3 h-3 -mt-2 rotate-45 bg-black"></div>
                                </div>
                                <i class="fa-solid fa-children my-auto"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        }
    </div>
</div>


